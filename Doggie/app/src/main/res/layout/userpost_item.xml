<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding = "2dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/topLevel">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/civDisplayPic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="8dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:src="@android:drawable/sym_def_app_icon"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/civDisplayPic"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:text="Ollie"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserLocation"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Somewhere in taft"
                        android:textSize="18sp"/>


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/tvUserMessage"
                android:textSize="16sp"
                android:text="I LOVE MY DOG SO FUCKING MUCH YES LIFE IS SHIT RUGHT NOW GAHD DAMN"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/ivPostPicture"
                android:src="@drawable/testpic"
                android:layout_below="@id/topLevel"
                android:scaleType="fitXY"
                android:padding="4dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivFavorite"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_marginRight="4dp"
                    android:paddingLeft="8dp"
                    android:scaleType="center"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/ivComment"
                    android:paddingLeft="6dp"
                    android:src="@drawable/ic_chat_bubble_black_24dp"
                    android:scaleType="center"
                    android:layout_toRightOf="@id/ivFavorite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCommentCount"
                    android:text="23"
                    android:layout_toRightOf="@id/ivComment"
                    android:layout_centerInParent="true"

                    android:paddingLeft="2dp"/>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>